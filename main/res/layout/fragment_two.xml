<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FragmentTwo">

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/q1Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="222dp"
            android:text="@string/q2"
            android:textColor="#000" />
        <CheckBox
            android:id="@+id/q2c1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/q1Hint"
            android:layout_marginTop="20dp"
            android:text="Orange"
            android:textColorHint="#000"
            android:padding="10dp"/>
        <CheckBox
            android:id="@+id/q2c2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/q2c1"
            android:text="White "
            android:textColorHint="#000"
            android:padding="10dp"/>
        <CheckBox
            android:id="@+id/q2c3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/q2c2"
            android:text="Yellow"
            android:textColorHint="#000"
            android:padding="10dp"/>
        <CheckBox
            android:id="@+id/q2c4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/q2c3"
            android:text="Green"
            android:textColorHint="#000"
            android:padding="10dp"/>
        <Button
            android:id="@+id/next_two"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q2c4"
            android:layout_marginTop="20dp"
            android:text="NEXT"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#009688"/>
    </RelativeLayout>

</FrameLayout>